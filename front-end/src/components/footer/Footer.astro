          <div class="w-full md:w-[fit-content]">
            <a class="flex-1" href="/">
              <Icon name="b-corp" size={60} class="text-[#cccccc]" />
            </a>
          </div>

          <div class="flex flex-col gap-y-2 flex-1">
            <div>
              <ul
                class="flex flex-row flex-wrap list-none m-0 p-0 items-center"
