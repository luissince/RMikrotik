---
import FormularioStaticRoutingGamesManglePort from "../components/static-routing-games-mangle-port/formulario";
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="Open Book">
  <div class="flex flex-col py-10 space-y-5">
    <div class="bg-gray-800 rounded-lg">
      <!-- Header -->
      <div class="text-center mb-6">
        <h1 class="text-2xl lg:text-4xl font-bold text-orange-500">
          Games Static Routing Using Filter Mangle
        </h1>
        <p class="text-gray-300">
          Static Routes and Firewall Mangle Rules for Games
        </p>
      </div>
    </div>

    <div class="bg-gray-800 rounded-lg mx-4">
      <!-- Contenido Principal -->
      <div class="container mx-auto">
        <!-- Formulario Principal -->
        <FormularioStaticRoutingGamesManglePort client:load />
      </div>
    </div>
  </div>
</MainLayout>
