---
import FormularioMikrotikStaticRouting from "../components/mikrotik-static-routing/formulario";
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="Open Book">
    <div class="flex flex-col py-10 space-y-5">
        <div class="bg-gray-800 rounded-lg">
            <!-- Header -->
            <div class="text-center mb-6">
                <h1 class="text-2xl lg:text-4xl font-bold text-orange-500">
                    MIKROTIK FAILOVER GENERATOR
                </h1>
                <p class="text-gray-300 mt-4">
                    Recursive Gateway, Check Gateway, Netwatch Ping
                </p>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg mx-4">
            <!-- Contenido Principal -->
            <div class="container mx-auto">
                <!-- Diagrama -->
                <div class="flex justify-center mb-8">
                    <img
                    src="/images/static routing.png"
                    alt="Routing Diagram"
                    class="rounded-lg"
                />
                </div>

                <!-- Formulario Principal -->
                <FormularioMikrotikStaticRouting client:load />
            </div>
        </div>
    </div>
</MainLayout>
