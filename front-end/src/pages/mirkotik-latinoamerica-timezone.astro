---
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="Open Book">
    <body
        class="bg-gray-900 text-white font-sans min-h-screen flex items-center justify-center"
    >
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mx-4 my-8">
            <!-- Contenido -->
            <!-- Header -->
            <!-- Título -->
            <div class="text-center mb-6">
                <h1 class="text-2xl lg:text-4xl font-bold text-orange-500">
                    LATINOAMERICA TIME ZONE NTP/SNTP CLIENT MIKROTIK GENERATOR
                </h1>
                <p class="text-gray-300 mt-4">configuración</p>
            </div>
        </div>
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mx-4 my-8">
            <!-- Contenido inicio -->

            <div class="container mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
                <!-- Título -->

                <div
                    class="container mx-auto p-6 bg-gray-800 rounded-lg shadow-lg max-w-5xl"
                >
                    <!-- Título -->
                    <div class="text-center mb-6"></div>

                    <!-- Diagrama -->
                    <div class="flex justify-center mb-8">
                        <img
                            src="/public/images/mirkotik-latinoamerica-timezone.png"
                            alt="Routing Diagram"
                            class="rounded-lg"
                        />
                    </div>

                    <!-- Formulario Principal -->
                    <form class="grid grid-cols-1 lg:grid-cols-3 gap-8"></form>
                    <!-- Gestión de Dominios -->
                    <div>
                        <div class="space-y-2">
                            <div
                                class="text-gray-950 shadow-2xl rounded-lg p-6 w-full ring-2 ring-blue-500"
                            >
                                <div class="flex items-center">
                                    <label
                                        class="block text-sm font-semibold mb-2 text-gray-300 w-1/6"
                                        >Time Zone</label
                                    >
                                    <select
                                        id="ros-version"
                                        class="w-6/12 p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                                    >
                                        <option value="v6.xx">Youtube</option>
                                        <option value="v7.xx">Tiktok</option>
                                        <option value="v7.xx">Vidio</option>
                                        <option value="v7.xx">Iflix</option>
                                        <option value="v7.xx">Netflix</option>
                                        <option value="v7.xx">Facebook</option>
                                        <option value="v7.xx">Instagram</option>
                                        <option value="v7.xx">WhatsApp</option>
                                        <option value="v7.xx">Twitter</option>
                                        <option value="v7.xx">Telegram</option>
                                        <option value="v7.xx">Threads</option>
                                        <option value="v7.xx">Imo.im</option>
                                        <option value="v7.xx">Shopee</option>
                                        <option value="v7.xx">Tokopedia</option>
                                        <option value="v7.xx">Bukalapak</option>
                                        <option value="v7.xx">Lazada</option>
                                        <option value="v7.xx"
                                            >Zoom Meeting</option
                                        >
                                        <option value="v7.xx"
                                            >Microsoft Teams</option
                                        >
                                        <option value="v7.xx"
                                            >Google Meet</option
                                        >
                                        <option value="v7.xx">Meta</option>
                                        <option value="v7.xx">Google</option>
                                        <option value="v7.xx">Speedtest</option>
                                        <option value="v7.xx"
                                            >GGC (Google Global Cache)</option
                                        >
                                        <option value="v7.xx"
                                            >Nice IIX or OIXP (indonesia)</option
                                        >
                                    </select>
                                    <div class="flex items-center">
                                        <label
                                            class="block text-sm font-semibold mb-2 text-gray-300 pl-2"
                                            >Time Zone [ Latinoamerica/Lima
                                            (+07:00 WIB) ]</label
                                        >
                                    </div>
                                    <!-- Agregar más dominios -->
                                </div>
                            </div>
                        </div>
                        <div
                            class="bg-gray-700 p-4 rounded-lg flex flex-col mt-4"
                        >
                            <label
                                class="block text-sm font-semibold mb-2 text-gray-300"
                                >Script Generator Result</label
                            >
                            <textarea
                                class="flex-grow bg-gray-800 border border-gray-100 rounded p-2 focus:outline-none focus:ring-2 focus:ring-orange-500 text-gray-400"
                                placeholder="Please Login and Subscribe .."
                                readonly></textarea>
                            <div class="flex mt-4 space-x-4"></div>
                        </div>
                        <!-- Botones -->
                        <div class="flex gap-4 mt-4 mb-4">
                            <button
                                type="button"
                                class="bg-green-500 hover:bg-green-600 text-white py-2 px-4 rounded"
                                >Copiar Script</button
                            >
                        </div>
            

                        <!-- Contenido Fin -->
                    </div>

                    <!-- Contenido Fin Aqui para abajo es otro codigo q u se borrara -->
                </div>
            </div>
        </div></body
    >
</MainLayout>
