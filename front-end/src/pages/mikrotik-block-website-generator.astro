---
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="Open Book">
    <body
        class="bg-gray-900 text-white font-sans min-h-screen flex items-center justify-center"
    >
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mx-4 my-8">
            <!-- Contenido -->
            <!-- Header -->
            <!-- Título -->
            <div class="text-center mb-6">
                <h1 class="text-2xl lg:text-4xl font-bold text-orange-500">
                    MIKROTIK BLOCK WEBSITE SCRIPT GENERATOR
                </h1>
                <p class="text-gray-300 mt-4">
                    Bloqueo de trafico 
                </p>
            </div>
        </div>
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mx-4 my-8">
            <!-- Contenido inicio -->

            <div class="container mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
                <!-- Título -->

                <div
                    class="container mx-auto p-6 bg-gray-800 rounded-lg shadow-lg"
                >
                    <!-- Título -->
                    <div class="text-center mb-6"></div>

                    <!-- Diagrama -->
                    <div class="flex justify-center mb-8">
                        <img
                            src="/images/mikrotik-block-website-generator.png"
                            alt="Routing Diagram"
                            class="rounded-lg"
                        />
                    </div>


               


      <!-- Gestión de Dominios -->

      <div
      class="text-gray-950 shadow-2xl rounded-lg p-6 w-full ring-2 ring-blue-500 mt-8"
    >
      <!-- Gráfico (Placeholder para el esquema) -->

      <!-- Tabla del formulario -->
      <div class="overflow-x-auto rounded-t-lg">
        <table
          class="table-auto w-full border-spacing-2 border-slate-600"
        >
          <thead>
            <tr class="bg-gray-700 text-gray-200">
          
              <th class="border-slate-700 p-2 border">Block Options</th>
              <th class="border-slate-700 p-2 border">First Regexp</th>
              <th class="border-slate-700 p-2 border">
                Last Regexp</th>
            </tr>
          </thead>
          <tbody>
            <tr class="text-gray-800">
         
              <td class="border-slate-700 p-2 border">
                <select
                id="routeros"
                class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
            >
                <option value="v6.xx">Block Use DNS Static Regexp</option>
                <option value="v7.xx">Block Use RAW Content</option>
                <option value="v7.xx">Block Use RAW TLS-Host</option>
                <option value="v7.xx">Block Use RAW Content To Address-List</option>
                <option value="v7.xx">Block Use Filter Content</option>
                <option value="v7.xx">Block Use Filter TLS-Host</option>
                <option value="v7.xx">Block Use Filter Content To Address-List</option>
                <option value="v7.xx">Block Use Layer-7</option>
                <option value="v7.xx">Block Use Web Proxy</option>
              
            </select>
              </td>
              <td class="border-slate-700 p-2 border">
                <input
                  type="text"
                  placeholder="(\.|^)"
                  class="text-center w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                />
              </td>
              <td class="border-slate-700 p-2 border">
                <input
                  type="text"
                  placeholder="$"
                  class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                />
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
          <!-- Tabla del formulario -->
          <div class="overflow-x-auto rounded-t-lg mt-4d">
            <table
              class="table-auto w-full border-spacing-2 border-slate-600"
            >
              <thead>
                <tr class="bg-gray-700 text-gray-200">
              
                  <th class="border-slate-700 p-2 border"></th>
                  <th class="border-slate-700 p-2 border"></th>
                  <th class="border-slate-700 p-2 border">
                    Prueba con "Dominio.xxx" o solo "Dominio"</th>
                </tr>
              </thead>
              <tbody>
                <tr class="text-gray-800">
             
                  <td class="border-slate-700 p-2 border  ">
                    <button
                    class="text-white w-full py-2 rounded-md transition ease-in-out delay-150 bg-orange-500 hover:-translate-y-1 hover:scale-110 hover:bg-orange-600 duration-300"
                  >
                  Agregar Nuevo nombre de Dominio
                  </button>
                  </td>
                  <td class="border-slate-700 p-2 border">
                    <button
                    class="text-white ml-8 px-4 py-2  rounded-md transition ease-in-out delay-150 bg-slate-500 hover:-translate-y-1 hover:scale-110 hover:bg-red-700 duration-300"
                  >
                    Eliminar
                  </button>
                  </td>
                  <td class="border-slate-700 p-2 border">
                    <input
                      type="text"
                      placeholder="$"
                      class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                    />
                  </td>
                </tr>
              </tbody>
            </table>
          </div>

             
                   
                   <div class="grid grid-cols-2 lg:grid-cols-2 gap-8 ">  
                    <div class="flex flex-wrap    gap-4 mb-6 mt-7">
                        <button
                        class="text-white px-4 py-2 rounded-md transition ease-in-out delay-150 bg-gray-600 hover:-translate-y-1 hover:scale-110 hover:bg-slate-700 duration-300"
                      >
                       Generar Script
                      </button>
                             
                    </div>
                    <div class="flex flex-wrap justify-end gap-4 mb-6 mt-7">
                  

                        <button
                        class="text-white px-4 py-2 rounded-md transition ease-in-out delay-150 bg-green-500 hover:-translate-y-1 hover:scale-110 hover:bg-teal-600 duration-300"
                      >
                      Copiar Script
                      </button>
                            
                    </div>

                </div>
                 

                    <!-- Gestión de Dominios -->

                    <div class="bg-gray-700 p-4 rounded-lg flex flex-col">
                        <label
                            class="block text-sm font-semibold mb-2 text-gray-300"
                            >Script Generator Result</label
                        >
                        <textarea
                            class="flex-grow bg-gray-800 border border-gray-600 rounded p-2 focus:outline-none focus:ring-2 focus:ring-orange-500 text-gray-400"
                            placeholder="Please Login and Subscribe .."
                            readonly></textarea>
                    </div>

                    <!-- Contenido Fin -->
                </div>

                <!-- Contenido Fin Aqui para abajo es otro codigo q u se borrara -->
            </div>
        </div>
    </body></MainLayout
>
