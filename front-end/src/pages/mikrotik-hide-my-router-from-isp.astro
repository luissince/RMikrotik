---
import MainLayout from "../layout/MainLayout.astro";
---

<MainLayout title="Open Book">
    <body
        class="bg-gray-900 text-white font-sans min-h-screen flex items-center justify-center"
    >
        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mx-4 my-8">
            <!-- Contenido -->
            <!-- Header -->
            <!-- Título -->
            <div class="text-center mb-6">
                <h1 class="text-2xl lg:text-4xl font-bold text-orange-500">
                    MIKROTIK NINJA : HIDE ROUTERBOARD INFO FROM ISP / WAN SCANNING
                </h1>
                <p class="text-gray-300 mt-4">Facil y confiable</p>
            </div>
        </div>

        <div class="bg-gray-800 rounded-lg shadow-lg p-6 mx-4 my-8">
            <!-- Contenido inicio -->
            <!-- Título -->

            <!-- Diagrama -->
            <div class="flex justify-center mb-2">
                <img
                    src="/public/images/mikrotik-hide-my-router-from-isp.png"
                    alt="Routing Diagram"
                    class="rounded-lg"
                />
            </div>

            <div class="container mx-auto p-6 bg-gray-800 rounded-lg shadow-lg">
                <!-- Título -->

                <div
                    class="container mx-auto p-6 bg-gray-800 rounded-lg shadow-lg"
                >
                    <!-- Contenedor borde azul -->
                    <div
                        class="text-gray-950 shadow-2xl rounded-lg p-6 w-full ring-2 ring-blue-500"
                    >
                        <!-- Tabla del formulario -->
                        <div class="overflow-x-auto rounded-t-lg">
                            <table
                                class="table-auto w-full border-spacing-2 border-slate-600"
                            >
                                <thead>
                                    <tr class="bg-gray-700 text-gray-200">
                                        <th class="border-slate-700 p-2 border"
                                            >Interface (ether) to ISP</th
                                        >
                                        <th class="border-slate-700 p-2 border"
                                            >Change Router Identity</th
                                        >
                                        <th class="border-slate-700 p-2 border"
                                            >Change Router Mac Address</th
                                        >
                                        <th class="border-slate-700 p-2 border"
                                        ></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="text-gray-800">
                                        <td class="border-slate-700 p-2 border">
                                            <input
                                                type="text"
                                                placeholder="ether1"
                                                class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                                            />
                                        </td>
                                        <td class="border-slate-700 p-2 border">
                                            <input
                                                type="text"
                                                placeholder="My Desktop PC"
                                                class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                                            />
                                        </td>
                                        <td class="border-slate-700 p-2 border">
                                            <input
                                                type="text"
                                                placeholder="52:E2:4F:28:8B:9F"
                                                class="w-full p-2 rounded bg-gray-700 text-white focus:outline-none focus:ring-2 focus:ring-orange-500"
                                            />
                                        </td>
                                        <td class="p-2 border border-slate-700">
                                            <button
                                                type="button"
                                                class="bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded"
                                                >Ramdom</button
                                            >
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                     
                        <h3 class="font-semibold text-gray-300 mb-2 mt-4">
                            More Hidden Protections from Internet (WAN) Scanning
                        </h3>
                        <div class="flex gap-4">
                            <div class="w-1/2  p-4 h-60 bg-gray-700  rounded mt-4 text-gray-200">
                              <!-- Contenido de la columna izquierda -->
                              <div class="space-y-2">
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game1"
                                        class="mr-2"
                                    /><label for="game1"
                                        >Block Winbox Scan</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game2"
                                        class="mr-2"
                                    /><label for="game2"
                                        >Block Neighbor Disc</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block Mac Server</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block Traceroute</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block RoMON</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block Open DNS</label
                                    >
                                </div>

                                <!-- Añadir más juegos aquí -->
                            </div>
                            </div> 
                            <div class="w-1/2 bg-gray-700 p-4 h-60 rounded mt-4 text-gray-200">
                              <!-- Contenido de la columna derecha -->
                              <div class="space-y-2">
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game1"
                                        class="mr-2"
                                    /><label for="game1"
                                        >Block Open PROXY</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game2"
                                        class="mr-2"
                                    /><label for="game2"
                                        >Block BTest</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block SNMP</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block The Dude</label
                                    >
                                </div>
                                <div>
                                    <input
                                        type="checkbox"
                                        id="game3"
                                        class="mr-2"
                                    /><label for="game3"
                                        >Block IP Cloud</label
                                    >
                                </div>

                                <!-- Añadir más juegos aquí -->
                            </div>
                            </div>
                          </div>



                    </div>

                    <!-- Formulario Principal -->

                    <div class="flex flex-wrap  gap-4 mb-6 mt-7">
                        <button
                            class="text-white px-4 py-2 rounded-md transition ease-in-out delay-150 bg-orange-500 hover:-translate-y-1 hover:scale-110 hover:bg-orange-600 duration-300"
                        >
                            Generar Script
                        </button>

                        <button
                            class="text-white px-4 py-2 rounded-md transition ease-in-out delay-150 bg-green-500 hover:-translate-y-1 hover:scale-110 hover:bg-teal-600 duration-300"
                        >
                            Copiar Todo
                        </button>
                    </div>

                    <!-- Gestión de Dominios -->

                    <div class="bg-gray-700 p-4 rounded-lg flex flex-col">
                        <label
                            class="block text-sm font-semibold mb-2 text-gray-300"
                            >Script Generator Result</label
                        >
                        <textarea
                            class="flex-grow bg-gray-800 border border-gray-600 rounded p-2 focus:outline-none focus:ring-2 focus:ring-orange-500 text-gray-400"
                            placeholder="Please Login and Subscribe .."
                            readonly></textarea>
                    </div>
                </div>

                <!-- Contenido Fin -->
            </div>

            <!-- Contenido Fin Aqui para abajo es otro codigo q u se borrara -->
        </div>
    </body>
</MainLayout>
