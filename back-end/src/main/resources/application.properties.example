# ----------------------------------------
# Config general
# ----------------------------------------

# Application port
server.port=8080

# Application name
spring.application.name=services-rmikrotik

# Server type (development | production)
spring.server.type=development  

# Throw exception if no handler is found
spring.mvc.throw-exception-if-no-handler-found=true

# Disable static resources mappings
spring.web.resources.add-mappings=false

# (Opcional) Exclude automatic database configuration
# spring.autoconfigure.exclude=org.springframework.boot.autoconfigure.jdbc.DataSourceAutoConfiguration

# ----------------------------------------
# Config database
# ----------------------------------------

# Database URL (MySQL)
spring.datasource.url=jdbc:mysql://localhost:3306/mikrotik_scripts

# Database username
spring.datasource.username=root

# Database password
spring.datasource.password=

# JDBC driver class for MySQL
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

# ----------------------------------------
# JPA / Hibernate Configuration
# ----------------------------------------

# SQL dialect for Hibernate (MySQL 8)
spring.jpa.database-platform=org.hibernate.dialect.MySQL8Dialect

# Schema handling
# Options: none | validate | update | create | create-drop
# update: updates schema without deleting data
# create: creates schema from scratch (deletes existing data)
# none: does nathing
spring.jpa.hibernate.ddl-auto=update

# Show SQL queries in console
spring.jpa.show-sql=true

# Format SQL queries in console
spring.jpa.properties.hibernate.format_sql=true

# ----------------------------------------
# Application Restart Configuration
# ----------------------------------------

# (Optional) Enable automatic restart
spring.devtools.restart.enabled=true

# (Optional) Enable LiveReload support
spring.devtools.livereload.enabled=true